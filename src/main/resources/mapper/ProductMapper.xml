<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="iris.platform.shop.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="iris.platform.common.entity.Product">
        <id column="id" property="id" />
        <result column="goods_id" property="goodsId" />
        <result column="goods_specification_ids" property="goodsSpecificationIds" />
        <result column="goods_sn" property="goodsSn" />
        <result column="goods_number" property="goodsNumber" />
        <result column="retail_price" property="retailPrice" />
        <result column="market_price" property="marketPrice" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, goods_id, goods_specification_ids, goods_sn, goods_number, retail_price, market_price
    </sql>

</mapper>
