    <select id="queryObject" resultType="iris.platform.shop.entity.GoodsEntity">
		select * from tb_goods where id = #{value}
	</select>

    <select id="queryList" resultType="iris.platform.shop.entity.GoodsEntity">
        select
        tb_goods.id,
        tb_goods.category_id,
        tb_goods.goods_sn,
        tb_goods.name,
        tb_goods.brand_id,
        tb_goods.goods_number,
        tb_goods.keywords,
        tb_goods.goods_brief,
        tb_goods.goods_desc,
        tb_goods.is_on_sale,
        tb_goods.add_time,
        tb_goods.update_time,
        tb_goods.sort_order,
        tb_goods.is_delete,
        tb_goods.attribute_category,
        tb_goods.counter_price,
        tb_goods.extra_price,
        tb_goods.is_new,
        tb_goods.goods_unit,
        tb_goods.primary_pic_url,
        tb_goods.list_pic_url,
        tb_goods.retail_price,
        tb_goods.sell_volume,
        tb_goods.primary_product_id,
        tb_goods.unit_price,
        tb_goods.promotion_desc,
        tb_goods.promotion_tag,
        tb_goods.app_exclusive_price,
        tb_goods.is_app_exclusive,
        tb_goods.is_limited,
        tb_goods.is_hot,
        tb_goods.market_price,
        tb_goods.create_user_id,
        tb_goods.create_user_dept_id,
        tb_goods.update_user_id,
        tb_category.name category_name,
        tb_attribute_category.name attribute_category_name,
        tb_brand.name brand_name
        from tb_goods
        LEFT JOIN tb_category
        ON tb_goods.category_id = tb_category.id
        LEFT JOIN tb_attribute_category ON tb_goods.attribute_category = tb_attribute_category.id
        LEFT JOIN tb_brand ON tb_brand.id = tb_goods.brand_id
        WHERE 1=1
        <!--  数据过滤  -->
        ${filterSql}
        <if test="name != null and name != ''">
            AND tb_goods.name LIKE concat('%',#{name},'%')
        </if>
        AND tb_goods.is_Delete = #{isDelete}
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by tb_goods.id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from tb_goods WHERE 1=1
        <!--  数据过滤  -->
        ${filterSql}
        <if test="name != null and name != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        AND tb_goods.is_Delete = #{isDelete}
    </select>

