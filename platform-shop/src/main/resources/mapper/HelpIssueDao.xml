<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="iris.platform.shop.dao.HelpIssueDao">

    <resultMap type="iris.platform.shop.entity.HelpIssueEntity" id="helpIssueMap">
        <result property="id" column="id"/>
        <result property="typeId" column="type_id"/>
        <result property="question" column="question"/>
        <result property="answer" column="answer"/>
        <result property="sort" column="sort"/>
    </resultMap>

	<select id="queryObject" resultType="iris.platform.shop.entity.HelpIssueEntity">
		select
			`id`,
			`type_id`,
			`question`,
			`answer`,
			`sort`
		from tb_help_issue
		where id = #{id}
	</select>

	<select id="queryList" resultType="iris.platform.shop.entity.HelpIssueEntity">
		select
		tb_help_issue.id,
		tb_help_issue.type_id,
		tb_help_issue.question,
		tb_help_issue.answer,
		tb_help_issue.sort,
		tb_help_type.type_name
		from tb_help_issue
		LEFT JOIN tb_help_type ON tb_help_issue.type_id = tb_help_type.id
		WHERE 1=1
		<if test="typeName != null and typeName.trim() != ''">
			AND tb_help_type.type_name LIKE concat('%',#{typeName},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by type_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_help_issue
		LEFT JOIN tb_help_type on tb_help_issue.type_id = tb_help_type.id
		WHERE 1=1
		<if test="typeName != null and typeName.trim() != ''">
			AND tb_help_type.type_name LIKE concat('%',#{typeName},'%')
		</if>
	</select>
	 
	<insert id="save" parameterType="iris.platform.shop.entity.HelpIssueEntity" useGeneratedKeys="true" keyProperty="id">
		insert into tb_help_issue(
			`type_id`,
			`question`,
			`answer`,
			`sort`)
		values(
			#{typeId},
			#{question},
			#{answer},
			#{sort})
	</insert>
	 
	<update id="update" parameterType="iris.platform.shop.entity.HelpIssueEntity">
		update tb_help_issue
		<set>
			<if test="typeId != null">`type_id` = #{typeId}, </if>
			<if test="question != null">`question` = #{question}, </if>
			<if test="answer != null">`answer` = #{answer}, </if>
			<if test="sort != null">`sort` = #{sort}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from tb_help_issue where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_help_issue where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>